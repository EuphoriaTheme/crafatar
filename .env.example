# Copy this file to .env and adjust values for your environment.
# Boolean values must be "true" or "false".

# Avatar sizing
AVATAR_MIN=1
AVATAR_MAX=512
AVATAR_DEFAULT=160

# 3D render scaling
RENDER_MIN=1
RENDER_MAX=10
RENDER_DEFAULT=6

# Cache durations in seconds
CACHE_LOCAL=1200
CACHE_BROWSER=3600
RETENTION_ENABLED=true
RETENTION_DAYS=30
RETENTION_INTERVAL_HOURS=24

# Runtime mode
EPHEMERAL_STORAGE=false
CLOUDFLARE=false
DEBUG=false
LOG_TIME=true

# Networking
# Must use redis:// or rediss://
REDIS_URL=redis://localhost:6379
PORT=3000
BIND=0.0.0.0
# Public base URL used in docs/examples (leave empty to infer from request host)
EXTERNAL_URL=
EXTERNAL_HTTP_TIMEOUT=2000
# Leave empty to disable server-side session request limiting
SESSIONS_RATE_LIMIT=

# Optional custom storage directories (must include trailing slash)
# FACE_DIR=./images/faces/
# HELM_DIR=./images/helms/
# SKIN_DIR=./images/skins/
# RENDER_DIR=./images/renders/
# CAPE_DIR=./images/capes/

